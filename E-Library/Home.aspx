<%@ Page Title="" Language="C#" MasterPageFile="~/Site1.Master" AutoEventWireup="true" CodeBehind="Home.aspx.cs" Inherits="E_Library.Home" %>
<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">
    <link href="CSS/Style.css" rel="stylesheet" />
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">
        <div class="banner">            
            <img src="images/back1.jpg" />
            <div class="search">
                <input type="text" name="name" value="" placeholder="Search Books name" />           
            </div>         
        </div>
    <div class="booklist-container">
        <asp:DataList ID="booklist1" runat="server" RepeatColumns="3" Width="500px" Style="margin-bottom: 10px" CellPadding="5">
            <ItemStyle ForeColor="Black" />
            <ItemTemplate>
                <div class="card custom">
                    <asp:Image ID="imgphoto" runat="server" ImageUrl='<%#Eval("bookimg_link")%>' CssClass="card-img-top" Height="200" Width="290" />
                    &nbsp;<div style="margin-left: 20px; margin-bottom: 20px;">
                        <p id="pgen">
                            <%#Eval("genre")%> Collections
                        </p>
                        <p id="pbook_desc">
                            <%# Eval("book_desc") %>
                        </p>
                    </div>
                </div>
            </ItemTemplate>
            <SeparatorTemplate>
                    <div style="padding:20px;"></div>
          </SeparatorTemplate>
        </asp:DataList>

             <div class="explore">
                 <h2>Collections</h2>
                 <div class="find-more">
                     <p>Explore curated lists of top Books, Novels, and magazins, based on trends</p>
                     <a href="ViewBooks.aspx">All Book collections<i class="fa fa-arrow-alt-circle-right"></i></a>
                 </div>
             </div>

             <asp:DataList ID="DataList2" runat="server" RepeatColumns="3" Width="600px" style="margin-bottom:30px">
                       <ItemStyle foreColor="Black"/>
                 <ItemTemplate>
                     <div class="card" style="width: 18rem;margin-right:30px;">
                     <asp:Image ID="imgphoto" runat="server" ImageUrl='<%#Eval("bookimg_link")%>' CssClass="card-img-top" />                     
                      <div class="card-body">
                        <h5 class="card-title" id="cardad" runat="server"><%#Eval("genre")%></h5>
                        <p class="card-text" id="cardbooknm" runat="server"><%# Eval("book_nm") %></p>
                      </div>
                    </div>
                 </ItemTemplate>
             </asp:DataList>

             <div style="font-size:1.4rem;font-weight:300;padding:30px 15px;line-height:10px;letter-spacing:1px;">
                Find Popular Books Online....
             </div>

             <asp:DataList ID="DataList3" runat="server" RepeatColumns="3" Width="600px" style="margin-bottom:30px">
                       <ItemStyle foreColor="Black"/>
                 <ItemTemplate>
                     <div class="card listofbooks" style="width: 18rem;margin-right:30px;">                  
                          <div class="card-body book">
                              <h5 class="card-title" id="cardad" runat="server"><%#Eval("genre")%></h5>
                              <a class="card-title" href="ViewBooks.aspx"><i class="fa fa-arrow-right-long"></i></a>                              
                          </div>
                          <p class="card-text" id="cardbn" runat="server"><%# Eval("book_nm") %></p>
                    </div>
                 </ItemTemplate>
             </asp:DataList>
             
             <div>
                 Explore More options
             </div>
         </div>
    
</asp:Content>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         